{
  "manifest_version": 2,

  "name": "Remove Element",
  "description": "Remove an HTML element from the context menu (right-click).",
  "version": "1.0",
  "author": "Austin Heiman",

  "permissions": [
    "contextMenus",
    "activeTab"
  ],

  "icons": {
    "16": "images/red-x-16.png",
    "48": "images/red-x-48.png",
    "128": "images/red-x-128.png"
  },

  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "content_script.js"
      ]
    }
  ]

}
